{
	"name": "rufio-ts",
	"version": "0.0.0-dev",
	"description": "OpenCode plugin that enforces lint checks before stopping, and updates Zellij tab status",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && esbuild dist/index.js --bundle --platform=node --format=esm --outfile=dist/plugin.js --external:@opencode-ai/*",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"format": "biome format --write"
	},
	"keywords": [
		"opencode",
		"plugin"
	],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.26.1",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@opencode-ai/plugin": "^1.1.12",
		"@opencode-ai/sdk": "^1.1.12",
		"@types/node": "^25.0.5",
		"esbuild": "^0.27.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"minimatch": "^10.1.1",
		"yaml": "^2.8.2"
	}
}
